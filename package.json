{
  "name": "oryfm",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/serve.js",
    "build": "npm run build-ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/serve.js"
  },
  "dependencies": {
    "argon2": "^0.26.1",
    "bcrypt": "^3.0.7",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "csrf": "^3.1.0",
    "csurf": "^1.10.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.2.0",
    "http-errors": "^1.7.3",
    "morgan": "~1.9.1",
    "node-fetch": "^2.6.0",
    "pug": "^2.0.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.0.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/csrf": "^1.3.2",
    "@types/csurf": "^1.9.36",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.1",
    "@types/http-errors": "^1.6.2",
    "@types/i18n": "^0.8.6",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.11.7",
    "@types/node-fetch": "^2.5.2",
    "@types/pug": "^2.0.4",
    "@types/uuid": "^3.4.5",
    "concurrently": "^5.0.0",
    "nodemon": "^1.19.4",
    "typescript": "^3.6.4"
  }
}
