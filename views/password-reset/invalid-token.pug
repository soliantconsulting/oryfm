extends ../layout

block content
    div.card-header= cl('Error')
    div.card-body
        p= cl('The requested link is either expired or invalid.')

        if client.metadata.application_login_uri
            p.text-center
                a(href=client.metadata.application_login_uri)= cl('Return to home screen')

        p.text-center
            a(
                href="/password-reset/request/" + client.client_id
                class="btn btn-primary float-right"
            )= cl('Reset your password')
